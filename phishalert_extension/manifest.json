{
  "manifest_version": 3,
  "name": "PhishAlert",
  "version": "1.0",
  "description": "Detect phishing emails using an open-source LLM via Ollama.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"]
}
